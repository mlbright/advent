# Advent Calendar Application Environment Variables
# Copy this file to /etc/advent-calendar.env and update with your values

# Rails environment (production, development, test)
RAILS_ENV=production

# Port to listen on
PORT=3000

# Bind to all interfaces
BINDING=0.0.0.0

# Enable logging to stdout for systemd journal
RAILS_LOG_TO_STDOUT=true

# Enable serving static files (needed when not using a reverse proxy)
RAILS_SERVE_STATIC_FILES=true

# Secret key base (generate with: bin/rails secret)
# IMPORTANT: Replace this with your own secret key!
SECRET_KEY_BASE=your_secret_key_base_here

# Optional: Database URL (if not using SQLite with default path)
# DATABASE_URL=sqlite3:///home/mbright/advent/storage/production.sqlite3

# Optional: Custom time zone
# TZ=America/New_York
