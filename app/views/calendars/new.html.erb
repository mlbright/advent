<div class="calendar-form">
  <h1>Create New Advent Calendar</h1>

  <%= form_with model: @calendar, local: true do |form| %>
    <% if @calendar.errors.any? %>
      <div class="alert alert-danger">
        <h3><%= pluralize(@calendar.errors.count, "error") %> prohibited this calendar from being saved:</h3>
        <ul>
          <% @calendar.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= form.label :title %>
      <%= form.text_field :title, required: true, class: "form-control", 
          placeholder: "My Christmas Adventure 2025" %>
    </div>

    <div class="form-group">
      <%= form.label :description, "Tagline or Description (optional)" %>
      <%= form.text_area :description, rows: 3, class: "form-control", 
          placeholder: "A special countdown to Christmas..." %>
    </div>

    <div class="form-group">
      <%= form.label :recipient_id, "Calendar For" %>
      <%= form.collection_select :recipient_id, @users, :id, :email, 
          { prompt: "Select a recipient..." }, { required: true, class: "form-control" } %>
    </div>

    <div class="form-group">
      <%= form.label :year %>
      <%= form.number_field :year, required: true, class: "form-control", 
          min: 2025, value: @calendar.year || Time.zone.now.year %>
      <small class="form-text">Must be 2025 or later</small>
    </div>

    <div class="form-actions">
      <%= form.submit "Create Calendar", class: "btn btn-primary" %>
      <%= link_to "Cancel", calendars_path, class: "btn btn-secondary" %>
    </div>

    <p class="form-help">
      <strong>Note:</strong> After creating the calendar, you'll be able to add content to each of the 24 days.
    </p>
  <% end %>
</div>
