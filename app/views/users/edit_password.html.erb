<div class="password-change-container">
  <h1>Change Password</h1>
  <p class="text-muted">Update your password for <%= @user.email %></p>
  
  <%= form_with url: update_password_path, method: :patch, local: true do |form| %>
    <div class="form-group">
      <%= form.label :current_password, "Current Password" %>
      <%= form.password_field :current_password, required: true, autofocus: true, class: "form-control" %>
    </div>
    
    <div class="form-group">
      <%= form.label :password, "New Password" %>
      <%= form.password_field :password, required: true, class: "form-control", minlength: 6 %>
      <small class="form-text text-muted">Must be at least 6 characters</small>
    </div>
    
    <div class="form-group">
      <%= form.label :password_confirmation, "Confirm New Password" %>
      <%= form.password_field :password_confirmation, required: true, class: "form-control", minlength: 6 %>
    </div>
    
    <div class="form-actions">
      <%= form.submit "Update Password", class: "btn btn-primary" %>
      <%= link_to "Cancel", root_path, class: "btn btn-secondary" %>
    </div>
  <% end %>
</div>
